# Variables d'environnement pour le projet Formatrix - EXEMPLE
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# Paramètres de base
DEBUG=True
SECRET_KEY=changez_cette_clé_en_production
ALLOWED_HOSTS=127.0.0.1,localhost

# Base de données
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_HOST=
DATABASE_PORT=

# Pour PostgreSQL, utilisez:
# DATABASE_ENGINE=django.db.backends.postgresql
